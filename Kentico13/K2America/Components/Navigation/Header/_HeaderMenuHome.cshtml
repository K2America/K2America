@using K2America.Components.Navigation;
@model HeaderMenuViewModel
@if (Model.Items != null && Model.Items.Any())
{
    int navIndex = 1;
    @foreach (var item in Model.Items)
    {
        <li class="@(navIndex==2?"responsive-menuTwo":"")">
            <h6 class="@(navIndex==1?"responsive-text":"")"><img src="@item.HeaderMenuItems.Icon" alt="@item.HeaderMenuItems.Name" />@item.HeaderMenuItems.Name</h6>
            @foreach (var menuItem in item.MenuItems)
            {
                <a href="@menuItem.NodeAlias">@menuItem.DocumentName</a>
            }
        </li>
        navIndex++;
    }
}