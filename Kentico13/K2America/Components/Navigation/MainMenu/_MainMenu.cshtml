@using CMS.DocumentEngine;
@model IEnumerable<TreeNode>

@using Kentico.Content.Web.Mvc
@using Kentico.Web.Mvc
@{
    string currentURL = @Url.Kentico().CurrentPageUrl().ToString();
}
@if (Model != null && Model.Count() > 0 && Model.Any())
{
    int itemIndex = 1;
    @foreach (var item in Model)
    {
        <li class="@(itemIndex==1?"responsive-link":"")"><a href="@item.NodeAlias" class="nav-responsive @(currentURL==item.NodeAliasPath.ToLower()?"nav-active":"")">@item.DocumentName</a></li>
        itemIndex++;
    }
}
